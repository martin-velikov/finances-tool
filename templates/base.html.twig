<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <ul>
            {% if not app.user %}
                <li>
                    <a href="{{ path('login') }}">Login</a>
                </li>
                <li>
                    <a href="{{ path('register') }}">Register</a>
                </li>
            {% endif %}
            {% if app.user %}
                <li>
                    <a href="{{ path('show_user_profile') }}">Profile</a>
                </li>
                <li>
                    <a href="{{ path('show_rates') }}">My saved rates</a>
                </li>
                <li>
                    <a href="{{ path('logout') }}">Logout</a>
                </li>
            {% endif %}
        </ul>

        {% for message in app.flashes('notice') %}
            <div>{{ message }}</div>
        {% endfor %}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
