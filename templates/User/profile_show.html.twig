{% extends 'base.html.twig' %}

{% block title %}My profile{% endblock %}

{% block body %}
    <h2>My profile</h2>

    <span>Username: {{ app.user.username }}</span><br>
    <span>Name: {{ app.user.name }}</span><br>
    <span>My number: {{ app.user.phone }}</span><br>
    <span>Email: {{ app.user.email }}</span><br>

    {% if latest is defined %}
        <a href="{{ path('save_rates') }}" id="saveRates">Save rates</a>
            <table id="rates" class="table table-striped table-bordered" data-rates={{ latest|json_encode|raw }}>
                <thead>
                    <tr>
                        <th>Currency</th>
                        <th>Rate</th>
                    </tr>
                </thead>
                <tbody>
                    {% for currency, rate in latest %}
                        <tr>
                            <td>{{ currency }}</td>
                            <td>{{ rate }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
    {% endif %}

    <a href="{{ path('edit_user_profile') }}">Edit profile</a><br>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/dataTables.js') }}"></script>
{% endblock %}
