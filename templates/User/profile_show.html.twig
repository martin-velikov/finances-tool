{% extends 'base.html.twig' %}

{% block title %}My profile{% endblock %}

{% block body %}
    <div class="container container-profile">
        <h2>My profile</h2>

        <span>Username: {{ app.user.username }}</span><br>
        <span>Name: {{ app.user.name }}</span><br>
        <span>My number: {{ app.user.phone }}</span><br>
        <span>Email: {{ app.user.email }}</span><br>

        <a class="btn btn-primary anchor-btn" href="{{ path('edit_user_profile') }}">Edit profile</a><br>
    </div>
    <div class="container">
        <h1>Today's rates</h1>

        <table id="rates" class="table table-striped table-bordered"></table>

        <a class="btn btn-primary anchor-btn" href="{{ path('save_rates') }}" id="saveRates">Save rates</a>
    </div>

    <div class="container">
        <div id="chart" style="height: 5000px"></div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/dataTables.js') }}"></script>
    <script src="{{ asset('build/anyChart.js') }}"></script>
{% endblock %}
